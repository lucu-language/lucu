import "core:io"

effect run {
	fun run()
}

effect choose {
	fun choose(t run, f run)
}

fun truly() choose {
	fun { t, f -> run() with t }
}

fun falsy() choose {
	fun { t, f -> run() with f }
}

fun ify(c choose, t run, f run) {
	choose(t, f) with c
}

fun main() / io.stdio {

	let true = truly()
	let false = falsy()

	ify (true) {
		io.putstr("true")
	} {
		io.putstr("false")
	}

	ify (false) {
		io.putstr("true")
	} {
		io.putstr("false")
	}

}
